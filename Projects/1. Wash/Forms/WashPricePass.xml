            <Xml Type="Path">WashPart.xml</Xml>
            <Show Type="Modal" />
            <Parameters>
                <Parameter Name="PriceType">pass</Parameter>
            </Parameters>
        </Command>

        <Command Name="AddRowValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
            <Object Name="PricePassDatabaseTable">
                <Property Name="AddRow">
                    <Parameters>
                        <Parameter Name="ColumnNames">
                            <Structure Type="List">
                                <Item>WorkNumber</Item>
                                <Item>PartId</Item>
                                <Item>DefaultQuantity</Item>
                            </Structure>
                        </Parameter>
                        <Parameter Name="Values">
                            <Structure Type="List">
